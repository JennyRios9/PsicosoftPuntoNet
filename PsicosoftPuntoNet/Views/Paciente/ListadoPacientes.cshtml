@model PacientesIndexModelView;

@{
    ViewData["Title"] = "Listado de Pacientes";
}




<div class="card">

    <div class="card-body">
        <a asp-controller="Paciente" asp-action="Registrar" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Registrar </a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Acciones</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Edad</th>
                    <th scope="col">Cedula</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Acudiente</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var paciente in Model.Listado_de_pacientes)
                {
                    <tr>
                        <th>
                            <div class="btn-group" role="group">
                                <a asp-controller="Paciente" asp-action="Editar" asp-route-Id="@paciente.Id"
                                   type="button" class="btn btn-success btn-sm">
                                    <i class="bi bi-pencil-square"> </i>
                                </a>
                                <a asp-controller="Paciente" asp-action="Eliminar" asp-route-Id="@paciente.Id"
                                   type="button" class="btn btn-danger btn-sm"> <i class="bi bi-trash">   </i></a>
                            </div>
                        </th>

                        <td>@paciente.Nombre</td>
                        <td>@paciente.Apellido</td>
                        <td>@paciente.Edad</td>
                        <td>@paciente.Cedula</td>
                        <td>@paciente.telefono</td>
                        <td>@paciente.Direccion</td>
                        <td>@paciente.Acudiente</td>

                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>



